[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 30

background = #00000000
foreground = #ccffffff

line-color = #00000000
line-size = 2

; If you want tray icons to be on the top bar use this.
tray-position=right
tray-padding=2

spacing = 2
padding-right = 5
module-margin = 4

font-0 = NotoSans-Regular:size=8;4
font-1 = MaterialIcons:size=10;6
font-2 = Termsynu:size=8:antialias=false;4
font-3 = "Font Awesome 5 Pro:size=10;4"

modules-left = i3 title
modules-right = cpu memory battery volume backlight wireless-network wired-network date powermenu

;[bar/bottom]
;monitor = ${env:MONITOR:}
;bottom = true
;width = 100%
;height = 27
;
;background = ${bar/top.background}
;foreground = ${bar/top.foreground}
;
;line-color = ${bar/top.background}
;line-size = 2
;
