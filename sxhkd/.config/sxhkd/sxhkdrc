#################################################
# non-i3 binds
#################################################

# Basic binds

## Terminal
super + Return
    alacritty

## Run application menu, window switcher, emoji menu
super + {Tab,u,p}
    {rofi -location 2 -show window,rofimoji,bwmenu}

## Screenshot program
Print
    flameshot gui

## Quickly run my preferred programs
## w: web
## e: editor
## m: messaging
## f: file explorer
super + o ; {w,e,m,f}
    DRI_PRIME=1 {brave,alacritty -e vim,Discord,Thunar}

# volume control
XF86AudioRaiseVolume
    amixer sset Master 5%+
XF86AudioLowerVolume
    amixer sset Master 5%-

# granular volume control
super + XF86AudioRaiseVolume
    amixer sset Master 1%+
super + XF86AudioLowerVolume
    amixer sset Master 1%-

# toggle mute
XF86AudioMute
    amixer sset Master toggle

# brightness control
XF86MonBrightnessUp
    xbacklight +5
XF86MonBrightnessDown
    xbacklight -5

# granular brightness control
super + XF86MonBrightnessUp
    xbacklight +1
super + XF86MonBrightnessDown
    xbacklight -1

# Toggle transparency
super + shift + F12
    $HOME/.config/scripts/killcompton

# music controls
XF86AudioPlay
    playerctl play-pause
   #mocp --toggle-pause
XF86AudioPause
    playerctl play-pause
   #mocp --toggle-pause
XF86AudioNext
    playerctl next
   #mocp --next
XF86AudioPrev
    playerctl previous
   #mocp --previous

# Power controls
super + p ; {i,s,h,b}
    zzz -{S,z,Z,H}
#################################################
# i3 keybinds
#################################################
# kill focused window
super + shift + q
    i3-msg kill

# Change focus
super + {h,j,k,l}
    i3-msg focus {left,down,up,right}

# Move focused window
super + shift + {h,j,k,l}
    i3-msg move {left,down,up,right}

# Split in horizontal/vertical orientation
super + {g,v}
    i3-msg split {h,v}

# Enter fullscreen mode
super + f
    i3-msg fullscreen toggle

# Toggle tiling/floating
super + space
    i3-msg floating toggle

# Focus parent container
super + a 
    i3-msg focus parent

# Switch to workspace
super + {1-9,0}
    i3-msg workspace {1-9,10}

# Move focused container to workspace
super + shift + {1-9,0}
    i3-msg move container to workspace {1-9,10}

# Reload the configuration file
super + shift + c
    i3-msg reload

# Restart i3 inplace
super + shift + r
    i3-msg restart

# Exit i3
super + shift + z
    i3-nagbar -t warning -m "You pressed the exit shortcut. Do you really want to exit i3? This will end your X session." -b "Yes, exit i3" "i3-msg exit"

# Resize mode
super + r
    i3-msg mode "resize"

# Lock
alt + l
    i3lock -c 2e3440 --insidevercolor=88c0d0 --insidewrongcolor=bf616a --insidecolor=81a1c1 --ringvercolor=81a1c1 --ringwrongcolor=bf616a --ringcolor=81a1c1 -k --time-font=NotoSans-Regular --date-font=NotoSans-Regular --image=/home/beerpsi/.config/wallpaper/ai-no-sukima-1920-1080.png
