#################################################
# non-bspwm binds
#################################################

# Basic binds
super + Return
    alacritty
super + d
    rofi -location 2 -show run
super + Tab
    rofi -location 2 -show window
super + e
    thunar

# volume control
XF86AudioRaiseVolume
    amixer sset Master 5%+
XF86AudioLowerVolume
    amixer sset Master 5%-

# granular volume control
super + XF86AudioRaiseVolume
    amixer sset Master 1%+
super + XF86AudioLowerVolume
    amixer sset Master 1%-

# toggle mute
XF86AudioMute
    amixer sset Master toggle

# brightness control
XF86MonBrightnessUp
    xbacklight +5
XF86MonBrightnessDown
    xbacklight -5

# granular brightness control
super + XF86MonBrightnessUp
    xbacklight +1
super + XF86MonBrightnessDown
    xbacklight -1

# Toggle transparency
super + shift + F12
    $HOME/.config/scripts/killcompton

# music controls
XF86AudioPlay
    playerctl play
   #mocp --toggle-pause
XF86AudioPause
    playerctl pause
   #mocp --toggle-pause
XF86AudioNext
    playerctl next
   #mocp --next
XF86AudioPrev
    playerctl previous
   #mocp --previous


